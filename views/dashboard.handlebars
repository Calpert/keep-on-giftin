<p><a href="/logout">Logout</a></p>
<div class="container">
    <div class="row">
        <div class="col-12">
            <h4>Giftin Dashboard</h4>
        </div>
    </div>
    <div class="row">
        <div class="col-9">
            <div class="row">
                {{#each profile}}
                <div class="col-4">
                    <div class="card" style="width: 18rem;">
                        <div class="card-body">
                            <h5 class="card-title">{{this.firstName}} {{this.lastName}}</h5>
                            <h6 class="card-subtitle mb-2 text-muted">{{this.relationship}}</h6>
                            <p class="card-text">Some quick example text to build on the card title and make up the bulk
                                of the card's content.</p>
                            <a href="#" class="card-link">Profile Page</a>
                            <a href="#" class="card-link">Delete</a>
                        </div>
                    </div>
                     {{/each}}
                    <div class="col-1"></div>
                    <div class="col-2 sidebar">
                        <p>Hello from sidebar</p>
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                            class="bi bi-gift-fill" viewBox="0 0 16 16">
