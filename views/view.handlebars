<h1>Hi, {{userFirstName}}!</h1>
<div class="container col-md-10">
  <ul class="nav nav-tabs">
    <li class="active">
      <button class="btn"><a href="#1" data-toggle="tab">Profile</a></button>
    </li>
    <li>
      <button class="btn btn-primary-outline"><a href="#2" data-toggle="tab">Events</a></button>
    </li>
    <li>
    </li>
  </ul>

  <div class="tab-content">
    <div class="tab-pane active" id="1">
      <div class="col-lg-12">
        <div class="profile-container">
          <div class="profile-view">
            <i class="fas fa-3x fa-user-circle"></i>
            <h1 style=>{{profile.firstName}} {{profile.lastName}}</h1>
            <h6 class="d-flex justify-content-center"></i> {{profile.relationship}}</h6>
            {{#if profile.birthday}}
            <div class="row"></div>
            <p><i class="fas fa-2x fa-birthday-cake pr-3"></i>{{profile.birthday}}</p>
            {{/if}}
            {{#if profile.email}}
            <p><i class="fas fa-2x fa-envelope pr-3"></i></i>{{profile.email}}</p>  
            {{/if}}
            {{#if profile.phoneNumber}}
            <p><i class="fas fa-2x fa-mobile-alt pr-3"></i>{{profile.phoneNumber}}</p>
            {{/if}}
            {{#if profile.address}}
            <p><i class="fas fa-2x fa-map-marker-alt"></i>
              Address: {{profile.address}}
              <br>
              Address 2: {{profile.address_other}}
              <br>
              City: {{profile.city}}
              <br>
              State: {{profile.state}}
              <br>
              Zip: {{profile.zip}}
            </p>
            {{/if}}
            <p><i class="fas fa-2x fa-gifts pr-3"></i>Celebrates:</p>
              <ul>
                {{#if profile.valentines_day}}
                <li>Valentine's Day</li>
                {{/if}}
                {{#if profile.hanukkah}}
                <li>Hanukkah</li>
                {{/if}}
                {{#if profile.christmas}}
                <li>Christmas</li>
                {{/if}}
                {{#if profile.mothers_day}}
                <li>Mother's Day</li>
                {{/if}}
                {{#if profile.fathers_day}}
                <li>Father's Day</li>
                {{/if}}
                {{#if profile.halloween}}
                <li>Halloween</li>
                {{/if}} 
              </ul>
          </div>
          <p data-id={{profile.id}} id="new-event-link">Add an upcoming event <a
              href="/newevent/{{profile.id}}">here.</a>
          </p>
        </div>
      </div>
    </div>
    <div class="tab-pane" id="2">
      <div class="d-flex list-group col-lg justify-content-beginning mt-5">
        <h5>Upcoming Events with {{profile.firstName}}</h5>
        {{#each event}}
        <p href="#" class="list-group-item list-group-item-action active">{{this.name}} on {{this.date}}</p>
        {{/each}}
      </div>
    </div>
  </div>
</div>

